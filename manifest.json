{
  "manifest_version": 3,
  "name": "Barra Cronômetro",
  "version": "1.0",
  "description": "Cronômetro ativado manualmente pelo usuário",
  "action": {
    "default_title": "Ativar Cronômetro"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "options_page": "options.html"
}
